<h1 class="text-4xl font-bold">Recent Posts</h1>

<% @posts.each do |post| %>
  <div class="pt-10 mt-10 space-y-16 border-t border-gray-200 sm:mt-16 sm:pt-16">
    <article class="flex flex-col items-start justify-between">
      <div class="flex items-center text-xs gap-x-4">
        <time datetime="<%= post.created_at.to_datetime %>" class="text-gray-500"><%= post.created_at.strftime("%b %d, %Y") %> &bull; <%= time_ago_in_words(post.created_at) %> ago</time>
      </div>
      <div class="relative group">
        <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
          <%= link_to post_path(post) do %>
            <span class="absolute inset-0"></span>
            <%= post.title %>
          <% end %>
        </h3>
        <span><%= pluralize(post.comments.count, 'comment') %></span>
        <p class="mt-5 text-sm leading-6 text-gray-600 line-clamp-3"><%= post.body %></p>
      </div>
      <div class="relative flex items-center mt-8 gap-x-4">
        <%= avatar(post.user.username) %>
        <div class="text-sm leading-6">
          <p class="font-semibold text-gray-900">
            <%= post.user.name %>
          </p>
          <p class="text-gray-600">@<%= post.user.username %></p>
        </div>
      </div>
    </article>
  </div>
<% end %>
